@model IEnumerable<marmeladka.ViewModel.ProductViewModel>

<ul class="thumbnails">

    @foreach (var item in Model)
    {
        <li class="span3">
            <div class="thumbnail">
                <img src="@Url.Action("GetImage", "Admin", new { item.Id })" alt="image" width="300" height="200">
                <div class="caption">
                    <h4>@item.Name</h4>
                    @item.Company.Name @item.Category.Name
                    <p>Цена @item.Retail_price Вес: 100 грамм</p>
                    <div class="row">
                        <div class="span1">
                            <button class="btn btn-primary">Добавить</button>
                        </div>
                        <input type="text" class="span2 pull-right productinput"/>
                    </div>           
                </div>
            </div>
        </li>
    }
</ul>

