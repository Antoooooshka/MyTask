@model marmeladka.ViewModel.ProductViewModel
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Заполните форму</h3>
    </div>
    @using (Html.BeginForm("AddOrUpdateProduct", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <div class="modal-body">
            @Html.HiddenFor(x => x.Id)

            @Html.TextBoxFor(x => x.Name, new { placeholder = "Введите имя продукта"})
            @Html.ValidationMessageFor(x => x.Name)
            @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Categories, new { placeholder = "Выберите имя"})
            @Html.ValidationMessageFor(x => x.Category)
            @Html.DropDownListFor(x => x.CompanyId, (IEnumerable<SelectListItem>)ViewBag.Companies, new { placeholder = "Выберите имя"})
            @Html.ValidationMessageFor(x => x.Company)
            @Html.TextBoxFor(x => x.Opt_price, new { placeholder = "Введите цену закупки"})
            @Html.ValidationMessageFor(x => x.Opt_price)
            @Html.TextBoxFor(x => x.Retail_price, new { placeholder = "Введите цену реализации"})
            @Html.ValidationMessageFor(x => x.Retail_price)
            @Html.TextBoxFor(x => x.Product_weight, new { placeholder = "Имеющийся вес"})
            @Html.ValidationMessageFor(x => x.Product_weight)
            <input type="file" name ="img" class="btn" />
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button type="submit" class="btn btn-success">Save changes</button>
        </div>
    }
</div>

