@model marmeladka.ViewModels.CategoryViewModel
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Заполните форму</h3>
    </div>
    @using (Html.BeginForm("AddOrUpdateCategory", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {      
        <div class="modal-body">
            @Html.HiddenFor(x => x.Id)
            @Html.TextBoxFor(x => x.Name, new { placeholder = "Введите имя категории", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
            @Html.HiddenFor(x => x.IsDelete)
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button type="submit" class="btn btn-success">Save changes</button>
        </div>
    }
</div>

