@model IEnumerable<marmeladka.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "GetAllCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>Имя</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {          
            <tr>
                <td>@item.Name</td>
                <td>
                    <button type="button" data-model-id="@item.Id" onclick="UpdateModel(this)" class="btn btn-success">Обновить</button></td>
                <td><a href="@Url.Action("DeleteCategory", "Admin", new { id = item.Id })" class="btn btn-danger">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-1 ">
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal">Добавить</button>
</div>

<div id="content">
</div>

@Html.Partial("_AddCategoryPartialView", new marmeladka.ViewModels.CategoryViewModel());


<script type="text/javascript">
    var cashDoc = document;
    function UpdateModel(event) {
        var itemId = event.getAttribute("data-model-id");
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "/Admin/AddOrUpdateCategory/" + itemId, true);
        xhr.send();
        xhr.onreadystatechange = function () {
            if (xhr.readyState != 4) return;
            if (xhr.status != 200) {
                alert(xhr.status + ': ' + xhr.statusText);
            } else {
                cashDoc.getElementById('content').innerHTML = xhr.responseText;
            }
        }
    }
</script>
