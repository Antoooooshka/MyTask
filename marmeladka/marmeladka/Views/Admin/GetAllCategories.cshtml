@model IEnumerable<marmeladka.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "GetAllCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>Имя</th>
        </tr>
    </thead>
    <tbody>
        @using (Ajax.BeginForm("UpdateCategory","Admin", new AjaxOptions { UpdateTargetId = "content", HttpMethod = "Get"}))
        {
            foreach (var item in Model)
            {          
            <tr data-model-id="@item.Id">
                <td>@item.Name</td>
                <td><a href="@Url.Action("UpdateCategory", "Admin", new { id = item.Id })" class="btn btn-success">Обновить</a></td>
                <td><a href="@Url.Action("DeleteCategory", "Admin", new { id = item.Id })" class="btn btn-danger">Удалить</a></td>
            </tr>
            }
        }

    </tbody>
</table>

<div class="col-md-1 ">
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal">Добавить</button>
</div>

<div id="content">
</div>

@Html.Partial("_AddCategoryPartialView", new marmeladka.ViewModels.CategoryViewModel());