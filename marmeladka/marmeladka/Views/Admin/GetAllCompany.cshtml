@model IEnumerable<marmeladka.ViewModels.CompanyViewModel>

@{
    ViewBag.Title = "GetAllCompany";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Имя</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><button type="button" data-model-id="@item.Id" onclick="AddOrUpdateModel(this)" class="btn btn-success">Обновить</button></td>
                <td><a href="@Url.Action("DeleteCompany", "Admin", new {id = item.Id})" class="btn btn-danger">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-1 ">
    <button class="btn btn-primary" type="button" onclick="AddOrUpdateModel(this)">Добавить</button>
</div>

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<script type="text/javascript">
    function AddOrUpdateModel(event) {
        $.ajax({
            cache: false,
            type: "GET",
            url: "/Admin/GetAddOrUpdateComanyForm/?id=" + event.getAttribute("data-model-id"),
            async: true,
            success: function (result) {
                $("#dialogContent").html(result);
                $('#modDialog').modal('show');
            }
        });
    };
</script>